@model IEnumerable<BelarusLib.Models.Composition>
@using BelarusLib.Models

@{
    ViewBag.Title = "Творы";
}

@if(ViewBag.Genre != null)
{
    <h2>@ViewBag.Genre</h2>
}
else
{
    <h2>Творы</h2> 
}
<hr />

<div class="row panel">
    @foreach (var item in Model)
    {
        <div class="well">
            @if (item.CompositionCover != null)
            {
                <div class="pull-left" style="margin-right: 10px">
                    <img class="img-thumbnail" width="75" height="89" src="data:image/jpeg;base64, @Convert.ToBase64String(item.CompositionCover)" />
                </div>
            }
            <h3>
                <strong>@Html.ActionLink(item.CompositionName, "Composition", new { id = item.CompositionId })</strong>
            </h3>
            <h4>
                @item.Author.AuthorFullName
            </h4>
            <span class="lead">@item.CompositionDescription</span>
        </div>
    }

</div>


