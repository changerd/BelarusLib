@{
    ViewBag.Title = "Панель администратора";
}

<h2>Панель администратора</h2>
<hr />
<div class="col-md-12">
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Данные о пользователях</div>
                <div class="panel-body">
                    <div class="list-group">
                        @Html.ActionLink("Роли", "GetRole", "Admin", new { @class = "list-group-item" })
                        @Html.ActionLink("Пользователи", "GetUser", "Admin", new { @class = "list-group-item" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Библиотка</div>
                <div class="panel-body">
                    <div class="list-group">
                        @Html.ActionLink("Авторы", "GetAuthor", "Admin", new { @class = "list-group-item" })
                        @Html.ActionLink("Жанры", "GetGenre", "Admin", new { @class = "list-group-item" })
                        @Html.ActionLink("Произведения", "GetComposition", "Admin", new { @class = "list-group-item" })
                        @Html.ActionLink("Типы произведения", "GetTypeComposition", "Admin", new { @class = "list-group-item" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <p class="text-center">@Html.ActionLink("Помощь", "Help", "Admin")</p>
</div>