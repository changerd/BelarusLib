@{
    ViewBag.Title = "Панэль адміністратара";
}

<h2>Панэль адміністратара</h2>
<hr />
<div class="col-md-12">
    <div class="row">
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">Данные о пользователях</div>
                <div class="panel-body">
                    <div class="list-group">
                        @Html.ActionLink("Роли", "GetRole", "Admin", new { @class = "list-group-item" })
                        @Html.ActionLink("Пользователи", "GetUser", "Admin", new { @class = "list-group-item" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">Бібліятэка</div>
                <div class="panel-body">
                    <div class="list-group">
                        @Html.ActionLink("Аўтары", "GetAuthor", "Admin", new { @class = "list-group-item" })
                        @Html.ActionLink("Жанры", "GetGenre", "Admin", new { @class = "list-group-item" })
                        @Html.ActionLink("Творы", "GetComposition", "Admin", new { @class = "list-group-item" })
                        @Html.ActionLink("Аўдыёзапісы", "GetAudio", "Admin", new { @class = "list-group-item" })
                        @Html.ActionLink("Відэазапісы", "GetVideo", "Admin", new { @class = "list-group-item" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">Викторины</div>
                <div class="panel-body">
                    <div class="list-group">
                        @Html.ActionLink("Создать викторину", "CreateQuiz", "Admin", new { @class = "list-group-item" })
                        @Html.ActionLink("Просмотр викторин", "GetQuiz", "Admin", new { @class = "list-group-item" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <p class="text-center">@Html.ActionLink("Помощь", "Help", "Admin")</p>
</div>