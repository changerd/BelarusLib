@model BelarusLib.Models.ApplicationRole

@{
    ViewBag.Title = "Выдаленне ролі";
}

<section>
    <div class="container">
        <h1>Вы сапраўды хочаце выдаліць ролю: <b>@Model.Name</b>?</h1>

        @using (Html.BeginForm())
        {
            <div class="form-group">
                <input type="submit" value="Выдаліць" class="btn btn-danger" />
                <a class="btn btn-dark" href="@Url.Action("GetRole", "Admin")">Назад</a>
            </div>
        }
    </div>
</section>
