@model IEnumerable<BelarusLib.Models.ApplicationRole>
@using BelarusLib.Infastructure
@using BelarusLib.Models

@{
    ViewBag.Title = "Ролi";
}

<section>
    <div class="container">
        <h2>Роли</h2>

        <p>
            @Html.ActionLink("Стварыць новую ролю", "CreateRole")
        </p>
        <table class="table">
            <tr>
                <th>
                    Название
                </th>
                <th>
                    Пользователи
                </th>
                <th></th>
            </tr>

            @foreach (ApplicationRole item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @string.Join(", ", item.Users.Select(x => Html.GetUserName(x.UserId)))
                    </td>
                    <td>
                        @Html.ActionLink("Прысвоіць", "GiveRole", new { id = item.Id }) |
                        @Html.ActionLink("Рэдагаваць", "EditRole", new { id = item.Id }) |
                        @Html.ActionLink("Выдаліць", "DeleteRole", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

        <p>
            <a class="btn btn-dark" href=@Url.Action("Index")>Назад</a>
        </p>
    </div>
</section>