@model BelarusLib.Models.Genre
@{
    ViewBag.Title = "Выдаленне жанра";
}

<section>
    <div class="container">
        <h1>Вы дакладна хочаце выдаліць жанр: <b>@Model.GenreName</b>?</h1>

        @using (Html.BeginForm())
        {
            <div class="form-group">
                <input type="submit" value="Выдаліць" class="btn btn-danger" />
                <a class="btn btn-dark" href="@Url.Action("GetGenre", "Admin")">Назад</a>
            </div>
        }
    </div>
</section>
