@model BelarusLib.Models.Photography

@{
    ViewBag.Title = "Выдаленне фатаграфіі аўтара";
}

<section>
    <div class="container">
        <h1>Вы дакладна хочаце выдаліць фатаграфію аўтара?</h1>
        <p>
            @Html.Raw("<img name=\"uploadImage\" src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.PhotographyPhoto) + "\" />")
        </p>

        @using (Html.BeginForm())
        {
            <div class="form-group">
                <input type="submit" value="Выдаліць" class="btn btn-danger" />
                <a class="btn btn-dark" href="@Url.Action("DetailsAuthor", "Admin", new { id = ViewBag.AuthorId })">Назад</a>
            </div>
        }
    </div>
</section>



