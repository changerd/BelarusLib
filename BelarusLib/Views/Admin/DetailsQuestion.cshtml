@model BelarusLib.Models.Question

@{
    ViewBag.Title = "Адказ";
}

<section>
    <div class="container">
        <h2>Адказ</h2>
        <div>
            <hr />
            <div>
                <a class="btn btn-dark" href=@Url.Action("EditQuestion", new { id = Model.QuestionId })>Рэдагаваць</a>
                <a class="btn btn-dark" href=@Url.Action("CreateChoice", new { qid = Model.QuestionId })>Стварыць варыянт адказу</a>
                <a class="btn btn-dark" href=@Url.Action("DetailsQuiz", new { id = Model.QuizId })>Назад</a>
            </div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.QuestionText)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.QuestionText)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.QuestionAnswer)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.QuestionAnswer)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.QuestionDescription)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.QuestionDescription)
                </dd>

                @if (Model.QuestionImage != null)
                {
                    <dt>
                        @Html.DisplayName("Малюнак")
                    </dt>

                    <dd>
                        @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.QuestionImage) + "\" />")
                    </dd>
                }

                <dt>
                    @Html.DisplayName("Тэст")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Quiz.QuizName)
                </dd>

            </dl>
        </div>

        <h3>Варыянты адказу</h3>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Назва")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Choices)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChoiceText)
                    </td>
                    <td>
                        @Html.ActionLink("Рэдагаваць", "EditChoice", new { id = item.ChoiceId }) |
                        @Html.ActionLink("Выдаліць", "DeleteChoice", new { id = item.ChoiceId })
                    </td>
                </tr>
            }
        </table>
    </div>
</section>

