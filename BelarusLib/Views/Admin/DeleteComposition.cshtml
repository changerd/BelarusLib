@model BelarusLib.Models.Composition
@{
    ViewBag.Title = "Выдаленне твора";
}

<h1>Вы дакладна хочаце выдаліць твор: <b>@Model.CompositionName</b>?</h1>

@using (Html.BeginForm())
{
    <div class="form-group">
        <input type="submit" value="Выдаліць" class="btn btn-danger" />
        <a class="btn btn-default" href="@Url.Action("GetComposition", "Admin")">Назад</a>
    </div>
}