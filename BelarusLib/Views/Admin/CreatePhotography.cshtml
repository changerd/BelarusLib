@model BelarusLib.Models.Photography

@{
    ViewBag.Title = "Стварэнне фатаграфіі аўтара";
}

<section>
    <div class="container">
        <h2>Стварэнне фатаграфіі аўтара</h2>

        @using (Html.BeginForm("CreatePhotography", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="hidden" value=@ViewBag.AuthorId name="AuthorId" />
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.PhotographyPhoto, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control" type="file" name="uploadImage" />
                        @Html.ValidationMessage("Photo", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Стварыць" class="btn btn-dark" />
                        @Html.ActionLink("Назад", "DetailsAuthor", new { id = ViewBag.AuthorId }, htmlAttributes: new { @class = "btn btn-dark" })
                    </div>
                </div>
            </div>
        }
    </div>
</section>