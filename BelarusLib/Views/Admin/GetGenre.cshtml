@model IEnumerable<BelarusLib.Models.Genre>

@{
    ViewBag.Title = "Жанры";
}

<h2>Жанры</h2>

<p>
    @Html.ActionLink("Стварыць", "CreateGenre")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GenreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GenreDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenreDescription)
            </td>
            <td>
                @Html.ActionLink("Рэдагаваць", "EditGenre", new { id = item.GenreId }) |
                @Html.ActionLink("Выдалiць", "DeleteGenre", new { id = item.GenreId })
            </td>
        </tr>
    }
</table>
