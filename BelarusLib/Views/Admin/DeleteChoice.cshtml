@model BelarusLib.Models.Choice

@{
    ViewBag.Title = "Выдаленне варыянту адказу";
}

<section>
    <div class="container">
        <h1>Вы дакладна хочаце выдаліць варыянт адказу: <b>@Model.ChoiceText</b>?</h1>

        @using (Html.BeginForm())
        {
            <div class="form-group">
                <input type="submit" value="Выдаліць" class="btn btn-danger" />
                <a class="btn btn-dark" href="@Url.Action("DetailsQuestion", "Admin", new { id = Model.QuestionId})">Назад</a>
            </div>
        }
    </div>
</section>
